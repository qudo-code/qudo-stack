{
  "name": "qudo",
  "version": "1.0.0",
  "authors": "matr",
  "description": "asset management kit",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter www dev",
    "start": "bun run --filter www start",
    "docker": "bun run --filter docker",
    "db": "bun run --filter db",
    "clean:deps": "rm -rf ./*/**/node_modules ./node_modules",
    "clean:vite": "pkill -f vite || true && sleep 1",
    "reinstall": "pnpm clean:deps && pnpm i"
  },
  "dependencies": {
    "bun": "^1.1.34"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "prettier": "3.3.3"
  }
}
